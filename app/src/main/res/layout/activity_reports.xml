<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6FA"
    tools:context=".Forms.Reports">
    <include
        layout="@layout/appbar_inventory"/>

    <!--row 1 col 1-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:background="#D3D3D3"
        app:cardCornerRadius="8dp"
        android:clickable="true">

        <TextView
            android:text="Sales Order Report"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:background="#D3D3D3"
            android:textSize="15dp"
            android:padding="16dp"
            android:onClick="SalesOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:background="#D3D3D3"
        app:cardCornerRadius="8dp"
        android:clickable="true">

        <TextView
            android:text="Delivery Report"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:background="#D3D3D3"
            android:textSize="15dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:onClick="overdue"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:background="#D3D3D3"
        app:cardCornerRadius="8dp"
        android:clickable="true">

        <TextView
            android:text="Overdue Sales Report"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:background="#D3D3D3"
            android:textSize="15dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="Reason"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:background="#D3D3D3"
        app:cardCornerRadius="8dp"
        android:onClick="InventoryReport"
        android:clickable="true">

        <TextView
            android:text="Inventory Report"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:background="#D3D3D3"
            android:textSize="15dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="8dp"
        android:background="#D3D3D3"
        app:cardCornerRadius="8dp"
        android:clickable="true">

        <TextView
            android:text="Top Customers"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:background="#D3D3D3"
            android:textSize="15dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="TopCustomers"/>
    </androidx.cardview.widget.CardView>




</LinearLayout>